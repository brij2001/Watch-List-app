@page
@model ProjectMangukiyaBrijMukesh.Pages.CreateNewListModel

@{
    ViewData["Title"] = "CreateNewList";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create New WatchList</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TblWatchList.Name" class="control-label">Name*</label>
                <input asp-for="TblWatchList.Name" class="form-control" />
                <span asp-validation-for="TblWatchList.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblWatchList.Description" class="control-label"></label>
                <input asp-for="TblWatchList.Description" class="form-control" />
                <span asp-validation-for="TblWatchList.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
