<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Watch List</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectMangukiyaBrijMukesh.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="">
                <p class="site-title"><a href="~/"><img class="title-image" src="../images/title.png" /></a></p>
            </div>
            <div class="float-right">
                <nav>
                    <ul id="menu">
                        <li><a href="~/">Home</a></li>
                        <li><a href="~/watchlists">My Lists</a></li>
                        <li style="float:right; padding:1.3vh;">
                            <form id="search" method="get" action="/Search">
                                <input id="input" type="text" name="query" placeholder="Search for a movie..." />
                                <button type="submit">Search movie</button>
                            </form>
                        </li>
                        <li style="float:right; padding:1.3vh;">
                            <form id="search" method="get" action="/Searchtv">
                                <input id="input" type="text" name="query" placeholder="Search for a tv show..." />
                                <button type="submit">Search tv</button>
                            </form>
                        </li>
                    </ul>

                </nav>
            </div>

        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>Project: Mangukiya,Brij Mukesh</p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


