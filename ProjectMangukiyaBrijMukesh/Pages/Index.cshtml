@page
@model IndexModel

@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-6">Popular right NOW</h1>
    <div class="grid-container">
        @foreach(var item in Model.Popular)
        {
            <div class="grid-item">
                 <a href="/details?type=@item.Type&amp;id=@item.Id">
                <img src="@item.Poster" alt="img" />
                <p>@item.Title</p>
                </a>
            </div>
        }
    </div>
</div>
