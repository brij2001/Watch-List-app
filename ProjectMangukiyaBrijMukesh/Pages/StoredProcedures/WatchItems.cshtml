@page "/watchListDetails"

@model ProjectMangukiyaBrijMukesh.Pages.StoredProcedures.WatchItemsModel
@{
}
<h2>WatchList Details</h2>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.spByWatchList)
        {
            <tr class="hover-glow">
                <td><img class="item-image" src="@item.Poster" style="width:7.5vw" /></td>
                <td>@item.Title</td>
                <td>
                    @item.Description
                    <br /><br />
                    <a href="/details?type=@item.MediaType&amp;id=@item.MediaId">View Details</a>
                    <form style="float:right;" method="post">
                        <button class="btn btn-outline-warning">Remove</button>
                        <input hidden name="mediaid" value="@item.MediaId" />
                        <input hidden name="listid" value="@ViewData["listid"]" />
                        <br />(Stored Proc)
                    </form>
            </tr>
        }
    </tbody>
</table>
