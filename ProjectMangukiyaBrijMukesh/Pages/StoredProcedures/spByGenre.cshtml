@page "/spByGenre"
@model ProjectMangukiyaBrijMukesh.Pages.StoredProcedures.spByGenreModel
@{
}
<div class="text-center">
    <h1 class="display-6">Filter by Genre(Stored Procedure)</h1>
    <form method="post">
        Select a Genre: <select class="form-select-lg" name="selected" asp-items="@Model.genres">
            <option value="">All</option>
        </select>
        <input class="btn btn-light" type="submit" value="Filter" asp-page-handler="Submit" />
    </form>

</div>

<br />
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.spByGenres.Count == 0)
        {
            <tr>
                <td colspan="3">No Results</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model.spByGenres)
            {
                <tr>
                    <td><img src="@item.Poster" style="width:7.5vw" /></td>
                    <td>@item.Title</td>
                    <td>
                        @item.Description
                        <br /><br />
                        <a href="/details?type=@item.MediaType&amp;id=@item.MediaId">View Details</a>
                </tr>
            }
        }
    </tbody>
</table>